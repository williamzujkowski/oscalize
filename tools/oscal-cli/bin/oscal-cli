# resolve links - $0 may be a softlink
PRG="$0"

while [ -h "$PRG" ]; do
  ls=`ls -ld "$PRG"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "$PRG"`/"$link"
  fi
done

PRGDIR=`dirname "$PRG"`
BASEDIR=`cd "$PRGDIR/.." >/dev/null; pwd`

# Reset the REPO variable. If you need to influence this use the environment setup file.
REPO=


# OS specific support.  $var _must_ be set to either true or false.
cygwin=false;
darwin=false;
case "`uname`" in
  CYGWIN*) cygwin=true ;;
  Darwin*) darwin=true
           if [ -z "$JAVA_VERSION" ] ; then
             JAVA_VERSION="CurrentJDK"
           else
             echo "Using Java version: $JAVA_VERSION"
           fi
		   if [ -z "$JAVA_HOME" ]; then
		      if [ -x "/usr/libexec/java_home" ]; then
			      JAVA_HOME=`/usr/libexec/java_home`
			  else
			      JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/${JAVA_VERSION}/Home
			  fi
           fi       
           ;;
esac

if [ -z "$JAVA_HOME" ] ; then
  if [ -r /etc/gentoo-release ] ; then
    JAVA_HOME=`java-config --jre-home`
  fi
fi

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin ; then
  [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
  [ -n "$CLASSPATH" ] && CLASSPATH=`cygpath --path --unix "$CLASSPATH"`
fi

# If a specific java binary isn't specified search for the standard 'java' binary
if [ -z "$JAVACMD" ] ; then
  if [ -n "$JAVA_HOME"  ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
      # IBM's JDK on AIX uses strange locations for the executables
      JAVACMD="$JAVA_HOME/jre/sh/java"
    else
      JAVACMD="$JAVA_HOME/bin/java"
    fi
  else
    JAVACMD=`which java`
  fi
fi

if [ ! -x "$JAVACMD" ] ; then
  echo "Error: JAVA_HOME is not defined correctly." 1>&2
  echo "  We cannot execute $JAVACMD" 1>&2
  exit 1
fi

if [ -z "$REPO" ]
then
  REPO="$BASEDIR"/lib
fi

CLASSPATH="$REPO"/gov.nist.secauto.oscal.tools.oscal-cli.cli-core-1.0.1.jar:"$REPO"/gov.nist.secauto.oscal.liboscal-java-3.0.1.jar:"$REPO"/gov.nist.secauto.metaschema.metaschema-java-binding-0.12.1.jar:"$REPO"/com.fasterxml.jackson.dataformat.jackson-dataformat-xml-2.15.2.jar:"$REPO"/com.fasterxml.jackson.core.jackson-annotations-2.15.2.jar:"$REPO"/org.apache.commons.commons-lang3-3.13.0.jar:"$REPO"/org.apache.logging.log4j.log4j-api-2.20.0.jar:"$REPO"/gov.nist.secauto.metaschema.cli-processor-0.12.1.jar:"$REPO"/gov.nist.secauto.metaschema.metaschema-model-common-0.12.1.jar:"$REPO"/org.antlr.antlr4-runtime-4.10.1.jar:"$REPO"/com.fasterxml.woodstox.woodstox-core-6.5.1.jar:"$REPO"/com.fasterxml.jackson.core.jackson-core-2.15.2.jar:"$REPO"/com.fasterxml.jackson.dataformat.jackson-dataformat-yaml-2.15.2.jar:"$REPO"/org.yaml.snakeyaml-2.0.jar:"$REPO"/com.vladsch.flexmark.flexmark-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-util-ast-0.64.8.jar:"$REPO"/org.jetbrains.annotations-24.0.1.jar:"$REPO"/com.vladsch.flexmark.flexmark-util-builder-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-util-collection-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-util-data-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-util-dependency-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-util-format-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-util-html-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-util-misc-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-util-sequence-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-util-visitor-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-ext-tables-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-util-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-util-options-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-ext-escaped-character-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-ext-superscript-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-ext-gfm-strikethrough-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-ext-typographic-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-html2md-converter-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-ext-emoji-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-jira-converter-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-ext-wikilink-0.64.8.jar:"$REPO"/com.vladsch.flexmark.flexmark-ext-ins-0.64.8.jar:"$REPO"/org.jsoup.jsoup-1.15.4.jar:"$REPO"/com.github.seancfoley.ipaddress-5.4.0.jar:"$REPO"/org.apache.commons.commons-text-1.10.0.jar:"$REPO"/commons-cli.commons-cli-1.5.0.jar:"$REPO"/nl.talsmasoftware.lazy4j-1.0.2.jar:"$REPO"/gov.nist.secauto.metaschema.metaschema-cli-0.12.1.jar:"$REPO"/gov.nist.secauto.metaschema.metaschema-java-codegen-0.12.1.jar:"$REPO"/com.squareup.javapoet-1.13.0.jar:"$REPO"/com.sun.xml.bind.jaxb-impl-4.0.0.jar:"$REPO"/com.sun.xml.bind.jaxb-core-4.0.0.jar:"$REPO"/jakarta.xml.bind.jakarta.xml.bind-api-4.0.0.jar:"$REPO"/jakarta.activation.jakarta.activation-api-2.1.0.jar:"$REPO"/org.eclipse.angus.angus-activation-1.0.0.jar:"$REPO"/org.apache.xmlbeans.xmlbeans-5.1.1.jar:"$REPO"/gov.nist.secauto.metaschema.metaschema-schema-generator-0.12.1.jar:"$REPO"/gov.nist.secauto.metaschema.metaschema-model-0.12.1.jar:"$REPO"/com.fasterxml.jackson.core.jackson-databind-2.15.2.jar:"$REPO"/org.jdom.jdom2-2.0.6.1.jar:"$REPO"/jaxen.jaxen-2.0.0.jar:"$REPO"/org.codehaus.woodstox.stax2-api-4.2.1.jar:"$REPO"/org.apache.logging.log4j.log4j-core-2.20.0.jar:"$REPO"/org.apache.logging.log4j.log4j-jul-2.20.0.jar:"$REPO"/org.fusesource.jansi.jansi-2.4.0.jar:"$REPO"/commons-io.commons-io-2.13.0.jar:"$REPO"/net.sf.saxon.Saxon-HE-12.3.jar:"$REPO"/org.xmlresolver.xmlresolver-5.2.0.jar:"$REPO"/org.apache.httpcomponents.client5.httpclient5-5.1.3.jar:"$REPO"/org.apache.httpcomponents.core5.httpcore5-h2-5.1.3.jar:"$REPO"/org.slf4j.slf4j-api-1.7.25.jar:"$REPO"/commons-codec.commons-codec-1.15.jar:"$REPO"/org.apache.httpcomponents.core5.httpcore5-5.1.3.jar:"$REPO"/org.xmlresolver.xmlresolver-5.2.0.jar:"$REPO"/com.github.erosb.everit-json-schema-1.14.2.jar:"$REPO"/org.json.json-20230227.jar:"$REPO"/commons-validator.commons-validator-1.7.jar:"$REPO"/commons-digester.commons-digester-2.1.jar:"$REPO"/commons-logging.commons-logging-1.2.jar:"$REPO"/commons-collections.commons-collections-3.2.2.jar:"$REPO"/com.damnhandy.handy-uri-templates-2.1.8.jar:"$REPO"/joda-time.joda-time-2.10.2.jar:"$REPO"/com.google.re2j.re2j-1.6.jar

ENDORSED_DIR=
if [ -n "$ENDORSED_DIR" ] ; then
  CLASSPATH=$BASEDIR/$ENDORSED_DIR/*:$CLASSPATH
fi

if [ -n "$CLASSPATH_PREFIX" ] ; then
  CLASSPATH=$CLASSPATH_PREFIX:$CLASSPATH
fi

# For Cygwin, switch paths to Windows format before running java
if $cygwin; then
  [ -n "$CLASSPATH" ] && CLASSPATH=`cygpath --path --windows "$CLASSPATH"`
  [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --path --windows "$JAVA_HOME"`
  [ -n "$HOME" ] && HOME=`cygpath --path --windows "$HOME"`
  [ -n "$BASEDIR" ] && BASEDIR=`cygpath --path --windows "$BASEDIR"`
  [ -n "$REPO" ] && REPO=`cygpath --path --windows "$REPO"`
fi

exec "$JAVACMD" $JAVA_OPTS -Dsun.stdout.encoding=UTF-8 -Dsun.stderr.encoding=UTF-8 \
  -classpath "$CLASSPATH" \
  -Dapp.name="oscal-cli" \
  -Dapp.pid="$$" \
  -Dapp.repo="$REPO" \
  -Dapp.home="$BASEDIR" \
  -Dbasedir="$BASEDIR" \
  gov.nist.secauto.oscal.tools.cli.core.CLI \
  "$@"
